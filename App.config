<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <configSections>
        <sectionGroup name="applicationSettings" type="System.Configuration.ApplicationSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" >
            <section name="NeverAway.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
        </sectionGroup>
    </configSections>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
  <!-- you can cause all kinds of bizarre errors by making these values something weird, too big, too small, etc.-->
    <applicationSettings>
        <NeverAway.Properties.Settings>
            <setting name="ShowBalloonTipTimeout" serializeAs="String">
                <value>500</value>
            </setting>
            <!-- see http://msdn.microsoft.com/en-us/library/windows/desktop/dd375731(v=vs.85).aspx for key code names, just remove VK_ and it should work.-->
            <setting name="KeyToPress" serializeAs="String">
                <value>F24</value>
            </setting>
            <setting name="TimeToWaitBetweenKeyPressesInMS" serializeAs="String">
                <value>240000</value>
            </setting>
            <setting name="TimesToPressKey" serializeAs="String">
                <value>1</value>
            </setting>
        </NeverAway.Properties.Settings>
    </applicationSettings>
</configuration>